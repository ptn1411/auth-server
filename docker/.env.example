# Docker Compose Environment Variables
# Copy this file to .env and customize

# ==========================================================================
# MySQL Configuration
# ==========================================================================
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=auth_server
MYSQL_USER=authserver
MYSQL_PASSWORD=authpassword
MYSQL_PORT=3306

# ==========================================================================
# Backend Configuration
# ==========================================================================
BACKEND_PORT=3000

# Token Expiry (seconds)
ACCESS_TOKEN_EXPIRY_SECS=900
REFRESH_TOKEN_EXPIRY_SECS=604800

# Application
APP_NAME=Auth Server
APP_URL=http://localhost:3000

# Logging (debug, info, warn, error)
RUST_LOG=auth_server=info,tower_http=info

# ==========================================================================
# Frontend Configuration
# ==========================================================================
FRONTEND_PORT=5173
VITE_API_URL=http://localhost:3000

# ==========================================================================
# WebAuthn/Passkey Configuration
# ==========================================================================
WEBAUTHN_RP_ID=localhost
WEBAUTHN_RP_NAME=Auth Server
WEBAUTHN_RP_ORIGIN=http://localhost:5173

# ==========================================================================
# Email Configuration (Optional)
# Leave empty to use mock email (logs to console)
# ==========================================================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@localhost
SMTP_FROM_NAME=Auth Server

# ==========================================================================
# Nginx (Production profile only)
# ==========================================================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
